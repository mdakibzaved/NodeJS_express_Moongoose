<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <title>Profile Page</title>
</head>
<body>
    <!-- Header -->
    <header class="bg-indigo-500 body-font  mx-auto">
        <div class="container mx-auto flex flex-wrap p-2 flex-col md:flex-row items-center w-[80%]">
          <a class="flex title-font font-medium items-center text-white mb-4 md:mb-0">
            <span class="ml-3 text-xl"><img class="w-12" src="https://designlooter.com/images/indigo-clipart-2.png" alt="Logo"></span>
          </a>
          <nav class="md:ml-auto md:mr-auto flex flex-wrap items-center text-base justify-center">
            <a class="mr-5 cursor-pointer text-white hover:text-gray-300">Home</a>
            <a class="mr-5 cursor-pointer text-white hover:text-gray-300">Create Post</a>
            <a class="mr-5 cursor-pointer text-white hover:text-gray-300">About</a>
            <a class="mr-5 cursor-pointer text-white hover:text-gray-300">Support</a>
          </nav>
          <button class="" >Logout
            <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-1" viewBox="0 0 24 24">
              <path d="M5 12h14M12 5l7 7-7 7"></path>
            </svg>
          </button>
        </div>
      </header>
      <!-- Header End Here -->

      <!-- Hero Section -->
      <section class="text-gray-400 bg-gray-900 body-font">
        <div class="container flex px-5 py-24 md:flex-row flex-col items-center w-[80%] mx-auto">
          <div class="lg:flex-grow md:w-1/2 lg:pr-24 md:pr-16 flex flex-col md:items-start md:text-left mb-16 md:mb-0 items-center text-center">
            <h1 class="title-font sm:text-4xl text-3xl mb-4 font-medium text-white">
              Hey, <%= user.name %> üëãüèª
              <br> <span class="hidden lg:inline-block text-blue-500">Share your Memory!!</span>
            </h1>
            <p class="mb-8 leading-relaxed">Lorem ipsum, dolor sit amet consectetur adipisicing elit. Iste, rem earum praesentium accusantium culpa at perspiciatis sint? Voluptatem velit eius rerum, eos sed nihil voluptatibus maiores obcaecati nulla? Laborum, nam?.</p>
            <div class="flex justify-center">
              <button class="inline-flex text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg">Button</button>
              <button class="ml-4 inline-flex text-gray-400 bg-gray-800 border-0 py-2 px-6 focus:outline-none hover:bg-gray-700 hover:text-white rounded text-lg">Button</button>
            </div>
          </div>
          <div class="lg:max-w-lg lg:w-[400px] md:w-1/2 w-5/6">
            <img class="object-cover object-center rounded w-70" alt="hero" src="https://discoversportsgroup.org/wp-content/uploads/2023/02/pimage.png">
          </div>
        </div>
      </section>
      <!-- Hero End Here -->

      <!-- Post Creator -->
      <section class="text-gray-400 bg-gray-900 body-font border-t border-zinc-800">
        <h1 class="tracking-tighter text-white text-4xl text-center mt-6">Write Your  <span class="text-indigo-600 font-bold">Art!!</span> </h1>
        <div class="container px-5 py-24 w-[80%] mx-auto">
          <div class="flex flex-wrap justify-center -m-4">
            <!-- Start of a form card -->
            <div class="p-4 lg:w-1/2">
              <div class="h-full bg-gray-800 bg-opacity-40 px-8 pt-16 pb-24 rounded-lg overflow-hidden text-center relative">
                <h2 class="tracking-widest text-xs title-font font-medium text-gray-500 mb-1">CREATE POST</h2>
                <h1 class="title-font sm:text-2xl text-xl font-medium text-white mb-3">New Post</h1>
                <!-- Form -->
                <form action="/post" method="post">
                  <div class="mb-4">
                    <textarea id="content" name="content" placeholder="Write your Message" class="w-full bg-gray-600 bg-opacity-40 rounded border border-gray-700 focus:border-indigo-500 focus:bg-gray-800 focus:ring-2 focus:ring-indigo-900 h-32 text-base outline-none text-gray-100 py-1 px-3 resize-none leading-6 transition-colors duration-200 ease-in-out"></textarea>
                  </div>
                  <button class="text-indigo-400 bg-gray-800 border-0 py-2 px-6 focus:outline-none hover:bg-gray-700 hover:text-white rounded text-lg">Submit</button>
                </form>
                <!-- Form End -->
              </div>
            </div>
            <!-- End of a form card -->
          </div>
        </div>
      </section>
      <!-- Post Creator End -->

      <!-- Profile -->
      <section class="text-gray-400 bg-gray-900 body-font border-t border-zinc-800">
        <h1 class="tracking-tighter text-white text-3xl text-center mt-4">Created Post</h1>
        <div class="container px-5 py-24 mx-auto w-[80%]">
          <div class="flex flex-wrap -m-4 justify-center">

            <!-- Start of a post card -->
            <% user.posts.map((post) => { %>
              <div class="p-4 lg:w-1/3">
                <div class="h-full bg-gray-800 bg-opacity-40 px-8 pt-16 pb-24 rounded-lg overflow-hidden text-center relative">
                  <h2 class="tracking-widest text-xs title-font font-medium text-gray-500 mb-1"><%= user.username %></h2>
                  <h1 class="title-font sm:text-2xl text-xl font-medium text-white mb-3"><%= user.name %></h1>
                  <p class="leading-relaxed mb-3"><%= post.content %></p>
                  <div class="text-center mt-2 leading-none flex justify-center absolute bottom-0 left-0 w-full py-4">
                    <span class="text-gray-500 mr-3 inline-flex items-center leading-none text-sm pr-3 py-1 border-r-2 border-gray-700 border-opacity-50">
                      <svg class="w-4 h-4 mr-1" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                        <circle cx="12" cy="12" r="3"></circle>
                      </svg>1.2K Likes
                    </span>
                    <button class="text-indigo-400 inline-flex items-center ml-3">
                      Edit
                      <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M12 20h9"></path>
                        <path d="M16.5 3.5l4 4L7 21H3v-4L16.5 3.5z"></path>
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            <% }) %>
            <!-- End of a post card -->
             
          </div>
        </div>
      </section>
      <!-- Profile End Here -->

